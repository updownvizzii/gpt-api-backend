{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.html",      "use": "@vercel/static" },
    { "src": "images.js",   "use": "@vercel/static" }
  ],
  "routes": [
    
    { "src": "/api/(.*)", "dest": "/api/$1.js" },

   
    { "src": "/",         "dest": "/index.html" },
    { "src": "/(.*)",     "dest": "/index.html" }
  ]
}
